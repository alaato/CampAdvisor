<% layout('Layouts/Boilerplate') -%>
    <h1 class="pt-5 text-center">CAMPGROUNDS</h1>
 
        <div class="row justify-content-center ">
        <% for( let campground of allcampgrounds) { %>
            <div class="col-xs-12 col-md-6 col-lg-4 mt-4">
                <div class="card shadow h-100" >
                    <img src="<%= campground.images[0].url %>" class="card-img-top" alt="...">
                    <div class="card-body">
                      <h5 class="card-title"><%= campground.title %></h5>
                      <p class="card-text"><%= campground.description %></p>
                    </div>
                    <div class="card-footer d-flex flex-column">
                        <a href="/campgrounds/<%= campground.id %>" class="btn button-card me-1">Show Camp</a>
                      </div>
                  </div>
                  
            </div>
                    
        <% } %>
    </div>

